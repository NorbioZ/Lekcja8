package com.company;

public class Account {

    private String nazwa;
    private double stan;
    public Account(String nazwa, double inicjał) {
        this.nazwa = nazwa;
        this.stan = inicjał;
    }
    public int wypłać(int kwota) throws InsufficientFundsException {
        if (kwota > stan)
            throw new InsufficientFundsException("Nie można wypłacić kwoty przekraczającej ilość dostępnych środków na koncie");
        stan -= kwota;
        return kwota;
    }
    public double stan_konta() {
        return stan;
    }

}
